<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp" android:layout_height="match_parent"
    android:id="@+id/dialogLayout">
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/dialogTitle"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:id="@+id/colorButtonLayout"
        android:layout_below="@+id/dialogTitle">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35dp"
            android:text="RED"
            android:id="@+id/redButton"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35dp"
            android:text="BLUE"
            android:id="@+id/blueButton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorButtonLayout"
        android:orientation="horizontal"
        android:id="@+id/teamNumLayout">
        <TextView
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="match_parent"
            android:text="Team Number:" />
        <EditText
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="4"
            android:maxLength="4"
            android:inputType="number"
            android:hint="Enter Here"
            android:id="@+id/dialogTeamNumEditText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamNumLayout"
        android:id="@+id/buttonLayout">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Done"
            android:id="@+id/doneButton"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:id="@+id/cancelButton"/>
    </LinearLayout>
</RelativeLayout>