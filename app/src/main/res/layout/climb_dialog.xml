<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/climbDialogLayout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/dialogTitle"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/climbTimeLayout"
        android:layout_below="@+id/dialogTitle"
        android:gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_below="@+id/climbTimeLayout"
        android:id="@+id/buttonLayout">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FAA2A8"
            android:text="Failure"
            android:textSize="30dp"
            android:id="@+id/failButton"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#BBEDC5"
            android:text="Success"
            android:textSize="30dp"
            android:id="@+id/successButton"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancelLine"
        android:layout_below="@+id/buttonLayout">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelButton"/>


    </LinearLayout>
</RelativeLayout>
